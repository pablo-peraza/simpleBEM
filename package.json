{
  "name": "simplebem",
  "version": "0.0.1",
  "description": "Simple CSS framework for creating UI using BEM syntax and no defaults ",
  "main": "src/index.pcss",
  "scripts": {
    "build": "node building/postcss.js",
    "lint": "stylelint src/**/*.pcss --fix",
    "watch": "nodemon --watch src -e pcss building/postcss.js",
    "browser": "browser-sync start --server --cwd 'docs' --serveStatic 'docs' --index 'docs/index.html' --files '*'",
    "debug": "npm run browser & npm run watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/piousp/simpleBEM.git"
  },
  "keywords": [
    "ui",
    "css",
    "framework"
  ],
  "author": "Pablo Peraza",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/piousp/simpleBEM/issues"
  },
  "homepage": "https://github.com/piousp/simpleBEM#readme",
  "devDependencies": {
    "autoprefixer": "9.5.1",
    "browser-sync": "2.26.5",
    "cssnano": "4.1.10",
    "eslint": "5.3.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.17.2",
    "nodemon": "1.19.1",
    "postcss": "7.0.16",
    "postcss-import": "12.0.1",
    "postcss-reporter": "6.0.1",
    "postcss-utilities": "0.8.1",
    "precss": "4.0.0",
    "rimraf": "2.6.3",
    "stylelint": "10.0.1",
    "stylelint-config-standard": "18.3.0"
  }
}
