{
  "root": true,
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true
  },
  "plugins": [
  ],
  "extends": [
    "airbnb-base"
  ],
  "rules": {
    "no-console": "error",
    "no-debugger": "error",
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "no-param-reassign": ["error", { "props": false }],
    "no-use-before-define": ["error", { "functions": false, "classes": true }],
    "no-underscore-dangle": [2,{"allow": ["_id"]}],
    "prefer-promise-reject-errors": "off",
    "import/extensions": ["always", {"ignorePackages": true}]
  }
}
